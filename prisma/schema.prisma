generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id                  Int                   @id @default(autoincrement())
  nombre              String
  logo                String
  direccion           String
  telefono            String
  email               String
  web                 String
  Usuario             Usuario[]
  Categoria_Calculo   Categoria_Calculo[]
  Categoria_Credito   Categoria_Credito[]
  Tipo_Persona        Tipo_Persona[]
  Categoria_Inversion Categoria_Inversion[]
}

model Rol {
  id      Int       @id @default(autoincrement())
  nombre  String
  Usuario Usuario[]
}

model Usuario {
  id        Int     @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String
  password  String
  telefono  String
  empresaId Int
  rolId     Int
  Empresa   Empresa @relation(fields: [empresaId], references: [id])
  Rol       Rol     @relation(fields: [rolId], references: [id])
}

model Categoria_Calculo {
  id        Int     @id @default(autoincrement())
  nombre    String
  EmpresaId Int
  Empresa   Empresa @relation(fields: [EmpresaId], references: [id])
}

model Categoria_Credito {
  id           Int     @id @default(autoincrement())
  nombre       String
  tasa_interes Int
  EmpresaId    Int
  Empresa      Empresa @relation(fields: [EmpresaId], references: [id])
}

model Tipo_Persona {
  id        Int     @id @default(autoincrement())
  nombre    String
  EmpresaId Int
  Empresa   Empresa @relation(fields: [EmpresaId], references: [id])
}

model Categoria_Inversion {
  id           Int     @id @default(autoincrement())
  nombre       String
  tasa_interes Int
  EmpresaId    Int
  Empresa      Empresa @relation(fields: [EmpresaId], references: [id])
}
